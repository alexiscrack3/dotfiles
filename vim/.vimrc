syntax on

" Turn on line numbers
set number
" or
" set nu

colorscheme default

" Incase-sensitive search
set ic
" Case-sensitive search
" set noic

filetype plugin indent on

" show existing tab with 4 spaces width
set tabstop=4

" when indenting with '>', use 4 spaces width
set shiftwidth=4

" On pressing tab, insert 4 spaces
set expandtab
